<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :product_user_id %>
  </div>

  <div class="field">
    <%= form.label :product_type %>
    <%= form.text_field :product_type, id: :product_product_type %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :unit_weight %>
    <%= form.text_field :unit_weight, id: :product_unit_weight %>
  </div>

  <div class="field">
    <%= form.label :unit %>
    <%= form.text_field :unit, id: :product_unit %>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price, id: :product_unit_price %>
  </div>

  <div class="field">
    <%= form.label :qty_stock %>
    <%= form.text_field :qty_stock, id: :product_qty_stock %>
  </div>

  <div class="field">
    <%= form.label :qty_available %>
    <%= form.text_field :qty_available, id: :product_qty_available %>
  </div>

  <div class="field">
    <%= form.label :image_data %>
    <%= form.hidden_field :image, value: product.cached_image_data %>
    <%= form.file_field :image, id: :product_image_data %>
  </div>

  <div class="field">
    <%= form.label :product_type_id %>
    <%= form.number_field :product_type_id, id: :product_product_type_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
