<p id="notice"><%= notice %></p>

<h1>Select Product to buy </h1>
<%= link_to 'New product', new_product_path, class: 'btn btn-success' %>
<hr>

<%= @products.count %>
<div class="row">
<% @products.each do |product| %>
  <div class="col-md-4">
   <%= render 'image_card', product: product, version_size: :medium %>
  </div>
<% end %>
</div>
